---
import BaseLayout from "../layouts/BaseLayout.astro";
import BreadCrumbs from "../components/common/BreadCrumbs.astro";
import ContactForm from "../components/forms/ContactForm.astro";

const breadcrumbs = [{ label: "Contacto", href: "/contacto" }];
---

<BaseLayout
  title="Contacto - Generación Urbano | Confección y Bordados San Bernardo"
  description="Contáctanos para cotizaciones, consultas y proyectos de confección y bordados. Atención personalizada en San Bernardo."
  keywords="contacto generacion urbano, cotizacion bordados, consultas confeccion, san bernardo"
>
  <div class="py-8 lg:py-12">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumbs -->
      <div class="mb-6">
        <BreadCrumbs items={breadcrumbs} />
      </div>

      <!-- Header -->
      <div class="text-center mb-12">
        <h1
          class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 font-heading mb-6"
        >
          Contáctanos
        </h1>
        <p class="text-lg md:text-xl text-gray-600 max-w-3xl mx-auto">
          Estamos aquí para ayudarte con tu proyecto. Contáctanos para recibir
          asesoramiento personalizado y una cotización gratuita.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div>
          <h2 class="text-2xl font-bold text-gray-900 mb-6">
            Envíanos un Mensaje
          </h2>
          <ContactForm />
        </div>

        <!-- Contact Information -->
        <div class="space-y-8">
          <div>
            <h2 class="text-2xl font-bold text-gray-900 mb-6">
              Información de Contacto
            </h2>

            <div class="space-y-6">
              <!-- Dirección -->
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <svg
                    class="h-6 w-6 text-primary-600 mt-1"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    ></path>
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div class="ml-4">
                  <h3 class="text-lg font-medium text-gray-900">Dirección</h3>
                  <p class="text-gray-600">
                    San Bernardo<br />
                    Región Metropolitana, Chile
                  </p>
                </div>
              </div>

              <!-- Teléfono -->
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <svg
                    class="h-6 w-6 text-primary-600 mt-1"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                    ></path>
                  </svg>
                </div>
                <div class="ml-4">
                  <h3 class="text-lg font-medium text-gray-900">Teléfono</h3>
                  <p class="text-gray-600">
                    <a
                      href="tel:+56990659619"
                      class="hover:text-primary-600 transition-colors"
                    >
                      +56 9 9065 9619
                    </a>
                  </p>
                </div>
              </div>

              <!-- Email -->
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <svg
                    class="h-6 w-6 text-primary-600 mt-1"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    ></path>
                  </svg>
                </div>
                <div class="ml-4">
                  <h3 class="text-lg font-medium text-gray-900">Email</h3>
                  <p class="text-gray-600">
                    <a
                      href="mailto:bordados.urbano@gmail.com"
                      class="hover:text-primary-600 transition-colors"
                    >
                      bordados.urbano@gmail.com
                    </a>
                  </p>
                </div>
              </div>

              <!-- WhatsApp -->
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <svg
                    class="h-6 w-6 text-primary-600 mt-1"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.108"
                    ></path>
                  </svg>
                </div>
                <div class="ml-4">
                  <h3 class="text-lg font-medium text-gray-900">WhatsApp</h3>
                  <p class="text-gray-600">
                    <a
                      href="https://wa.me/56990659619?text=Hola!%20Me%20gustaria%20conocer%20mas%20sobre%20sus%20servicios%20de%20bordados%20y%20confeccion.%20Podrian%20ayudarme?"
                      class="hover:text-primary-600 transition-colors"
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      Chatear ahora
                    </a>
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Horarios -->
          <div>
            <h2 class="text-2xl font-bold text-gray-900 mb-6">
              Horarios de Atención
            </h2>

            <div class="bg-gray-50 rounded-lg p-6">
              <div class="space-y-3">
                <div class="flex justify-between">
                  <span class="font-medium text-gray-900">Lunes - Viernes</span>
                  <span class="text-gray-600">9:00 - 18:00</span>
                </div>
                <div class="flex justify-between">
                  <span class="font-medium text-gray-900">Sábados</span>
                  <span class="text-gray-600">9:00 - 14:00</span>
                </div>
                <div class="flex justify-between">
                  <span class="font-medium text-gray-900">Domingos</span>
                  <span class="text-gray-600">Cerrado</span>
                </div>
              </div>

              <div class="mt-4 pt-4 border-t border-gray-200">
                <p class="text-sm text-gray-600">
                  <strong>Nota:</strong> Para proyectos urgentes, disponemos de atención
                  fuera del horario regular. Contáctanos para coordinar.
                </p>
              </div>
            </div>
          </div>

          <!-- Servicios Destacados -->
          <div>
            <h2 class="text-2xl font-bold text-gray-900 mb-6">
              ¿En Qué Te Podemos Ayudar?
            </h2>

            <div class="space-y-3">
              <div class="flex items-center">
                <svg
                  class="h-4 w-4 text-green-500 mr-3"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                <span class="text-gray-700"
                  >Cotizaciones gratuitas y sin compromiso</span
                >
              </div>
              <div class="flex items-center">
                <svg
                  class="h-4 w-4 text-green-500 mr-3"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                <span class="text-gray-700"
                  >Asesoramiento técnico especializado</span
                >
              </div>
              <div class="flex items-center">
                <svg
                  class="h-4 w-4 text-green-500 mr-3"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                <span class="text-gray-700"
                  >Consultas sobre productos y servicios</span
                >
              </div>
              <div class="flex items-center">
                <svg
                  class="h-4 w-4 text-green-500 mr-3"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                <span class="text-gray-700"
                  >Proyectos corporativos y empresariales</span
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
