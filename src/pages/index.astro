---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/common/Header.astro";
import ImageCarousel from "../components/common/ImageCarousel.astro";

// Configuración de imágenes del carrusel principal
const carouselImages = [
  {
    src: "/images/products/polerones_generacionales.jpg",
    alt: "Colección de polerones generacionales",
  },
  {
    src: "/images/products/alumnas_poleon.jpg",
    alt: "Alumnas con polerones generacionales personalizados",
  },
  {
    src: "/images/products/alumnas_poleron2.jpg",
    alt: "Grupo de alumnas mostrando diseños únicos",
  },

  {
    src: "/images/products/kick_2025.jpg",
    alt: "Polerón personalizado en maniquí",
  },
  {
    src: "/images/products/imagen-2026.png",
    alt: "Diseño premium de polerón",
  },
  {
    src: "/images/products/joevenes-azul.jpg",
    alt: "Jóvenes con polerones azules personalizados",
  },
  {
    src: "/images/products/2017-poleon.jpg",
    alt: "Polerón generacional 2017",
  },
];
---

<BaseLayout
  title="Generación Urbano - Bordados Premium para Polerones Generacionales"
  description="Especialistas en bordados de alta calidad para polerones de graduación. Básica, Media y más. Diseños únicos que perduran en el tiempo."
>
  <Header />

  <main class="min-h-screen bg-white">
    <!-- Hero Premium con carrusel -->
    <section
      class="relative bg-gradient-to-br from-black via-gray-900 to-black text-white pt-24 pb-16 lg:pt-32 lg:pb-24 overflow-hidden"
    >
      <!-- Imagen de fondo semi-transparente -->
      <div class="absolute inset-0 z-0">
        <img
          src="/images/products/alumnas_poleon.jpg"
          alt="Estudiantes con polerones generacionales"
          class="w-full h-full object-cover object-center opacity-30"
        />
        <!-- Overlay degradado para mejor legibilidad -->
        <div
          class="absolute inset-0 bg-gradient-to-br from-black/70 via-gray-900/60 to-black/70"
        >
        </div>
      </div>

      <!-- Líneas decorativas neón -->
      <div class="absolute top-0 left-0 w-full h-1 neon-line-top z-20"></div>
      <div class="absolute bottom-0 left-0 w-full h-1 neon-line-bottom z-20">
      </div>
      <div
        class="absolute top-20 left-10 w-32 h-0.5 neon-line-accent hidden lg:block z-20"
      >
      </div>
      <div
        class="absolute bottom-20 right-10 w-48 h-0.5 neon-line-accent hidden lg:block z-20"
      >
      </div>

      <!-- Círculos decorativos neón -->
      <div
        class="absolute top-1/4 right-20 w-4 h-4 rounded-full neon-dot hidden lg:block z-20"
      >
      </div>
      <div
        class="absolute bottom-1/3 left-16 w-3 h-3 rounded-full neon-dot-small hidden lg:block z-20"
      >
      </div>

      <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <!-- Contenido principal -->
          <div class="text-center lg:text-left space-y-8 relative">
            <!-- Línea decorativa sobre el título -->
            <div
              class="hidden lg:block absolute -top-8 left-0 w-20 h-1 bg-gradient-to-r from-red-600 to-transparent neon-accent-line"
            >
            </div>
            <h1
              class="text-5xl lg:text-7xl font-black leading-tight tracking-tight hero-title-neon"
            >
              <span
                class="text-white"
                style="text-shadow: 0 0 10px rgba(255,255,255,0.5), 0 0 20px rgba(255,255,255,0.3), 0 0 30px rgba(255,255,255,0.2);"
                >Polerones</span
              >
              <br />
              <span class="text-red-600 neon-text-red">Generacionales</span>
            </h1>

            <p class="text-xl lg:text-2xl text-gray-300 leading-relaxed">
              Creamos recuerdos que perduran para toda la vida. Especialistas en
              productos de alta calidad, <span class="text-red-400 font-bold"
                >Polerones Canguros y Cortavientos</span
              >.
            </p>

            <div class="flex flex-wrap gap-4 justify-center lg:justify-start">
              <a
                href="/diseña_aqui"
                class="inline-flex items-center px-8 py-4 bg-red-600 hover:bg-red-700 text-white font-bold rounded-lg transition-all duration-300 transform hover:scale-105"
                style="box-shadow: 0 0 20px rgba(220, 38, 38, 0.7), 0 0 40px rgba(220, 38, 38, 0.5), 0 10px 30px rgba(0, 0, 0, 0.3); text-shadow: 0 0 10px rgba(255, 255, 255, 0.3);"
              >
                Diseña Tu Polerón
              </a>
              <a
                href="https://wa.me/56993520202?text=Hola%2C%20me%20interesa%20cotizar%20un%20poler%C3%B3n%20personalizado"
                target="_blank"
                rel="noopener"
                class="inline-flex items-center px-8 py-4 border-2 border-green-400 text-green-400 hover:bg-green-400 hover:text-black font-bold rounded-lg transition-all duration-300 neon-whatsapp"
              >
                <svg
                  class="w-5 h-5 mr-2"
                  fill="currentColor"
                  viewBox="0 0 24 24"
