---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BreadCrumbs from '../../components/common/BreadCrumbs.astro';
import ProductCard from '../../components/cards/ProductCard.astro';
import CTA from '../../components/sections/CTA.astro';

// In a real app, this would use getCollection from astro:content
const products = [
  {
    title: "Polerón Urbano Premium",
    description: "Polerón urbano de alta calidad, perfecto para el estilo streetwear moderno.",
    image: "/images/products/poleron-urbano-main.jpg",
    price: "Desde $25.990",
    slug: "poleron-urbano",
    category: "Ropa Urbana"
  },
  {
    title: "Chaqueta de Trabajo Industrial",
    description: "Chaqueta resistente y funcional para profesionales.",
    image: "/images/products/chaqueta-work-main.jpg",
    price: "Desde $35.990",
    slug: "chaqueta-work",
    category: "Ropa de Trabajo"
  }
];

const breadcrumbs = [
  { label: "Productos", href: "/productos" }
];
---

<BaseLayout
  title="Productos - Confección de Calidad | Generación Urbana"
  description="Descubre nuestra línea de productos de confección: polerón urbano, chaquetas de trabajo, uniformes corporativos. Calidad profesional en San Bernardo."
  keywords="productos confeccion, poleron urbano, chaqueta trabajo, uniformes, ropa industrial san bernardo"
>
  <div class="py-8 lg:py-12">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumbs -->
      <div class="mb-6">
        <BreadCrumbs items={breadcrumbs} />
      </div>

      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 font-heading mb-6">
          Nuestros Productos
        </h1>
        <p class="text-lg md:text-xl text-gray-600 max-w-3xl mx-auto">
          Descubre nuestra línea completa de productos confeccionados con los más altos estándares de calidad. 
          Desde ropa urbana hasta uniformes industriales.
        </p>
      </div>

      <!-- Categories Filter -->
      <div class="flex flex-wrap justify-center gap-4 mb-12">
        <button class="px-6 py-2 bg-primary-600 text-white rounded-full font-medium">
          Todos
        </button>
        <button class="px-6 py-2 bg-gray-100 text-gray-700 rounded-full font-medium hover:bg-gray-200 transition-colors">
          Ropa Urbana
        </button>
        <button class="px-6 py-2 bg-gray-100 text-gray-700 rounded-full font-medium hover:bg-gray-200 transition-colors">
          Ropa de Trabajo
        </button>
        <button class="px-6 py-2 bg-gray-100 text-gray-700 rounded-full font-medium hover:bg-gray-200 transition-colors">
          Uniformes
        </button>
      </div>

      <!-- Products Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
        {products.map((product) => (
          <ProductCard {...product} />
        ))}
      </div>

      <!-- Empty State for More Products -->
      <div class="text-center bg-gray-50 rounded-lg p-12">
        <h3 class="text-xl font-semibold text-gray-900 mb-4">
          ¿No encuentras lo que buscas?
        </h3>
        <p class="text-gray-600 mb-6">
          Contamos con una amplia gama de productos adicionales. Contáctanos para conocer nuestro catálogo completo.
        </p>
        <a
          href="/contacto"
          class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-primary-600 border border-transparent rounded-md hover:bg-primary-700 transition-colors"
        >
          Consultar Catálogo Completo
        </a>
      </div>
    </div>
  </div>

  <!-- CTA Section -->
  <CTA
    title="¿Necesitas un Producto Personalizado?"
    description="Creamos productos únicos según tus especificaciones. Desde diseño hasta confección final."
    ctaText="Solicitar Cotización"
    ctaLink="/contacto"
    variant="secondary"
  />
</BaseLayout>