---
import SEO from "../components/seo/SEO.astro";
import Header from "../components/common/Header.astro";
import Footer from "../components/common/Footer.astro";
import SkipToContent from "../components/common/SkipToContent.astro";
import WhatsAppButton from "../components/common/WhatsAppButton.astro";
import "../styles/tailwind.css";

export interface Props {
  title: string;
  description: string;
  canonical?: string;
  image?: string;
  type?: "website" | "article" | "product";
  noindex?: boolean;
  keywords?: string;
  author?: string;
  publishedTime?: string;
  modifiedTime?: string;
  headerTransparent?: boolean;
}

const {
  title,
  description,
  canonical,
  image,
  type = "website",
  noindex = false,
  keywords,
  author,
  publishedTime,
  modifiedTime,
  headerTransparent = false,
} = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <!-- Google Tag Manager -->
    <script>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-XXXXXXX");
    </script>
    <!-- End Google Tag Manager -->

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Pacifico&family=Great+Vibes&display=swap"
      rel="stylesheet"
    />

    <SEO
      title={title}
      description={description}
      canonical={canonical}
      image={image}
      type={type}
      noindex={noindex}
      keywords={keywords}
      author={author}
      publishedTime={publishedTime}
      modifiedTime={modifiedTime}
    />
  </head>

  <body class="min-h-screen bg-white text-gray-900">
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-XXXXXXX"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->

    <SkipToContent />

    <Header transparent={headerTransparent} />

    <main
      id="main-content"
      class="focus:outline-none pt-20 lg:pt-24"
      style="min-height: calc(100vh - 80px);"
    >
      <slot />
    </main>

    <Footer />

    <WhatsAppButton />

    <!-- Analytics and tracking scripts would go here -->
    <script>
      // Basic performance tracking
      window.addEventListener("load", () => {
        // Track page load time
        const loadTime =
          performance.timing.loadEventEnd - performance.timing.navigationStart;
        console.log(`Page loaded in ${loadTime}ms`);
      });
    </script>
  </body>
</html>
