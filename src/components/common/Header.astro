---
import Nav from "./Nav.astro";

export interface Props {
  transparent?: boolean;
}

const { transparent = false } = Astro.props;
---

<header
  class:list={[
    "fixed top-0 z-40 w-full transition-all duration-500 border-b border-red-500/40",
    transparent
      ? "bg-black/95 backdrop-blur-xl"
      : "bg-gradient-to-r from-black via-gray-950 to-black",
  ]}
  id="main-header"
>
  <!-- Línea neón animada superior -->
  <div
    class="absolute top-0 left-0 right-0 h-[2px] bg-gradient-to-r from-transparent via-red-500 to-transparent neon-line"
  >
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 lg:h-20 items-center justify-between">
      <!-- Logo Section con efecto neón pulsante -->
      <div class="flex items-center group">
        <a
          href="/"
          class="flex items-center space-x-3 transition-all duration-500 hover:scale-105"
        >
          <!-- Logo Container con anillo neón -->
          <div class="relative">
            <!-- Anillo exterior neón animado -->
            <div
              class="absolute -inset-1 rounded-full bg-gradient-to-r from-red-600 via-red-400 to-red-600 opacity-75 blur-sm group-hover:opacity-100 transition-opacity duration-500 animate-pulse-slow"
            >
            </div>
            <!-- Anillo rotatorio -->
            <div
              class="absolute -inset-1.5 rounded-full border border-red-500/30 animate-spin-slow"
            >
            </div>

            <div
              class="relative w-12 h-12 lg:w-16 lg:h-16 bg-black rounded-full flex items-center justify-center ring-2 ring-red-500/50 transition-all duration-500 group-hover:ring-red-400"
            >
              <img
                src="/images/generacion_urbana.jpg"
                alt="Generación Urbana - Logo"
                class="w-10 h-10 lg:w-14 lg:h-14 object-cover rounded-full transition-transform duration-500 group-hover:scale-110"
                loading="eager"
              />
            </div>
          </div>

          <!-- Brand Text con efecto neón de texto -->
          <div class="hidden sm:block">
            <h1
              class="text-lg lg:text-xl font-bold leading-tight neon-text-white group-hover:neon-text-red transition-all duration-500"
            >
              Generación Urbano
            </h1>
            <div
              class="h-0.5 w-0 group-hover:w-full bg-gradient-to-r from-red-600 to-red-400 transition-all duration-500 rounded-full"
            >
            </div>
          </div>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center space-x-8">
        <Nav />

        <!-- Botón Diseña Aquí con efecto neón cyberpunk -->
        <div class="relative group">
          <!-- Resplandor exterior -->
          <div
            class="absolute -inset-1 bg-gradient-to-r from-red-600 via-red-500 to-red-600 rounded-xl opacity-70 blur-md group-hover:opacity-100 transition-all duration-500 animate-pulse-slow"
          >
          </div>

          <!-- Bordes animados -->
          <div class="absolute inset-0 rounded-xl overflow-hidden">
            <div class="absolute inset-0 border-2 border-red-500/50 rounded-xl">
            </div>
            <div class="absolute top-0 left-0 w-full h-full">
              <div
                class="absolute top-0 left-0 w-8 h-[2px] bg-gradient-to-r from-red-400 to-transparent animate-border-flow"
              >
              </div>
              <div
                class="absolute top-0 right-0 h-8 w-[2px] bg-gradient-to-b from-red-400 to-transparent animate-border-flow-delay"
              >
              </div>
              <div
                class="absolute bottom-0 right-0 w-8 h-[2px] bg-gradient-to-l from-red-400 to-transparent animate-border-flow"
              >
              </div>
              <div
                class="absolute bottom-0 left-0 h-8 w-[2px] bg-gradient-to-t from-red-400 to-transparent animate-border-flow-delay"
              >
              </div>
            </div>
          </div>

          <a
            href="/diseña_aqui"
            class="relative px-8 py-3 bg-gradient-to-r from-red-700 via-red-600 to-red-700 text-white font-bold rounded-xl transition-all duration-300 transform group-hover:scale-105 flex items-center gap-2 overflow-hidden"
          >
            <!-- Efecto de brillo que pasa -->
            <div
              class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000"
            >
            </div>

            <!-- Ícono animado -->
            <svg
              class="w-5 h-5 transition-transform duration-300 group-hover:rotate-12"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"
              ></path>
            </svg>

            <span class="relative z-10 neon-text-btn">Diseña Aquí</span>
          </a>
        </div>
      </div>

      <!-- Mobile Menu Button con efecto neón -->
      <div class="lg:hidden">
        <button
          type="button"
          class="relative w-12 h-12 rounded-xl flex items-center justify-center text-white transition-all duration-300 group overflow-hidden"
          aria-controls="mobile-menu"
          aria-expanded="false"
          id="mobile-menu-button"
        >
          <!-- Fondo con gradiente -->
          <div
            class="absolute inset-0 bg-gradient-to-br from-red-600/20 to-transparent rounded-xl border border-red-500/30 group-hover:border-red-400/60 transition-all duration-300"
          >
          </div>

          <!-- Resplandor en hover -->
          <div
            class="absolute inset-0 bg-red-500/0 group-hover:bg-red-500/20 rounded-xl transition-all duration-300"
          >
          </div>

          <svg
            class="w-6 h-6 relative z-10 transition-transform duration-300 group-hover:scale-110"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Línea neón animada inferior -->
  <div
    class="absolute bottom-0 left-0 right-0 h-[1px] bg-gradient-to-r from-transparent via-red-600/50 to-transparent"
  >
  </div>

  <!-- Mobile Menu con estilo futurista -->
  <div
    class="lg:hidden fixed inset-0 z-50 opacity-0 invisible transition-all duration-500 transform"
    id="mobile-menu-overlay"
  >
    <div
      class="absolute inset-0 bg-black/90 backdrop-blur-xl"
      id="mobile-backdrop"
    >
      <!-- Partículas de fondo decorativas -->
      <div class="absolute inset-0 overflow-hidden">
        <div
          class="absolute top-1/4 left-1/4 w-32 h-32 bg-red-600/10 rounded-full blur-3xl"
        >
        </div>
        <div
          class="absolute bottom-1/4 right-1/4 w-48 h-48 bg-red-500/10 rounded-full blur-3xl"
        >
        </div>
      </div>
    </div>

    <div class="relative pt-24 pb-8 px-6">
      <!-- Botón cerrar -->
      <button
        class="absolute top-6 right-6 w-10 h-10 rounded-full border border-red-500/50 flex items-center justify-center text-white hover:bg-red-500/20 transition-all duration-300"
        id="mobile-close-button"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>

      <div class="space-y-4">
        <a
          href="/"
          class="block text-white text-xl font-semibold py-4 px-6 rounded-xl border border-red-500/20 hover:border-red-500/60 hover:bg-red-500/10 transition-all duration-300 group"
        >
          <span class="flex items-center gap-3">
            <svg
              class="w-5 h-5 text-red-500"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
              ></path>
            </svg>
            <span class="group-hover:text-red-400 transition-colors"
              >Inicio</span
            >
          </span>
        </a>

        <a
          href="/diseña_aqui"
          class="block text-white text-xl font-bold py-4 px-6 rounded-xl bg-gradient-to-r from-red-600/80 to-red-700/80 border border-red-500/50 hover:from-red-600 hover:to-red-700 transition-all duration-300 group relative overflow-hidden"
        >
          <!-- Efecto brillo -->
          <div
            class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-700"
          >
          </div>

          <span class="flex items-center gap-3 relative z-10">
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"
              ></path>
            </svg>
            Diseña Aquí
          </span>
        </a>
      </div>
    </div>
  </div>
</header>

<style>
  /* Animación de pulso lento para el neón */
  @keyframes pulse-slow {
    0%,
    100% {
      opacity: 0.6;
    }
    50% {
      opacity: 1;
    }
  }

  .animate-pulse-slow {
    animation: pulse-slow 3s ease-in-out infinite;
  }

  /* Rotación lenta para el anillo */
  @keyframes spin-slow {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .animate-spin-slow {
    animation: spin-slow 20s linear infinite;
  }

  /* Animación de flujo del borde */
  @keyframes border-flow {
    0% {
      opacity: 0;
      transform: translateX(-100%);
    }
    50% {
      opacity: 1;
    }
    100% {
      opacity: 0;
      transform: translateX(100%);
    }
  }

  .animate-border-flow {
    animation: border-flow 3s ease-in-out infinite;
  }

  .animate-border-flow-delay {
    animation: border-flow 3s ease-in-out infinite 1.5s;
  }

  /* Línea neón superior animada */
  .neon-line {
    animation: neon-pulse 2s ease-in-out infinite;
  }

  @keyframes neon-pulse {
    0%,
    100% {
      opacity: 0.5;
      box-shadow: 0 0 5px rgba(239, 68, 68, 0.5);
    }
    50% {
      opacity: 1;
      box-shadow:
        0 0 20px rgba(239, 68, 68, 0.8),
        0 0 40px rgba(239, 68, 68, 0.4);
    }
  }

  /* Efecto neón para texto blanco */
  .neon-text-white {
    color: white;
    text-shadow:
      0 0 5px rgba(255, 255, 255, 0.5),
      0 0 10px rgba(255, 255, 255, 0.3),
      0 0 20px rgba(255, 255, 255, 0.2);
  }

  /* Efecto neón para texto rojo (hover) */
  .neon-text-red {
    color: #f87171;
    text-shadow:
      0 0 5px rgba(248, 113, 113, 0.8),
      0 0 10px rgba(239, 68, 68, 0.6),
      0 0 20px rgba(220, 38, 38, 0.4),
      0 0 40px rgba(220, 38, 38, 0.2);
  }

  /* Efecto neón para el botón */
  .neon-text-btn {
    text-shadow:
      0 0 5px rgba(255, 255, 255, 0.8),
      0 0 10px rgba(255, 255, 255, 0.4);
  }

  /* Efecto glow del header */
  #main-header {
    box-shadow:
      0 4px 30px rgba(0, 0, 0, 0.5),
      0 0 60px rgba(220, 38, 38, 0.15),
      inset 0 -1px 0 rgba(239, 68, 68, 0.1);
  }
</style>

<script>
  function initMobileMenu() {
    const button = document.getElementById("mobile-menu-button");
    const closeButton = document.getElementById("mobile-close-button");
    const menu = document.getElementById("mobile-menu-overlay");
    const backdrop = document.getElementById("mobile-backdrop");

    if (!button || !menu) return;

    const openMenu = () => {
      menu.classList.remove("opacity-0", "invisible");
      menu.classList.add("opacity-100", "visible");
      button.setAttribute("aria-expanded", "true");
      document.body.style.overflow = "hidden";
    };

    const closeMenu = () => {
      menu.classList.add("opacity-0", "invisible");
      menu.classList.remove("opacity-100", "visible");
      button.setAttribute("aria-expanded", "false");
      document.body.style.overflow = "";
    };

    button.addEventListener("click", openMenu);
    closeButton?.addEventListener("click", closeMenu);
    backdrop?.addEventListener("click", closeMenu);

    // Cerrar al hacer clic en un link del menú
    const menuLinks = menu.querySelectorAll("a");
    menuLinks.forEach((link) => {
      link.addEventListener("click", closeMenu);
    });
  }

  // Ejecutar inmediatamente y también en eventos de navegación
  initMobileMenu();
  document.addEventListener("DOMContentLoaded", initMobileMenu);
  document.addEventListener("astro:page-load", initMobileMenu);
</script>
