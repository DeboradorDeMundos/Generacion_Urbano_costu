          <li><a href="/contacto" class="text-gray-300 hover:text-white transition-colors">Contacto</a></li>
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Servicios</h3>
        <ul class="space-y-2">
          <li><a href="/servicios/costura-industrial" class="text-gray-300 hover:text-white transition-colors">Costura Industrial</a></li>
