---
export interface Props {
  title?: string;
  subtitle?: string;
  description?: string;
  image?: string;
  ctaText?: string;
  ctaLink?: string;
  secondaryCtaText?: string;
  secondaryCtaLink?: string;
}

const {
  title = "Costurera Experta en San Bernardo",
  subtitle = "Generación Urbana",
  description = "Especialistas en bordados empresariales, uniformes escolares y polerones para 4to medio. Más de 15 años creando piezas únicas con calidad profesional.",
  image = "/images/hero-bg.jpg",
  ctaText = "Solicitar Cotización",
  ctaLink = "/contacto",
  secondaryCtaText = "Ver Trabajos",
  secondaryCtaLink = "/productos"
} = Astro.props;
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background con gradiente moderno -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary-900 via-primary-800 to-primary-600">
    <!-- Patrón decorativo sutil -->
    <div class="absolute inset-0 opacity-10">
      <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
        <defs>
          <pattern id="hero-pattern" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
            <circle cx="10" cy="10" r="1" fill="currentColor" opacity="0.3"/>
          </pattern>
        </defs>
        <rect width="100" height="100" fill="url(#hero-pattern)"/>
      </svg>
    </div>
  </div>

  <!-- Elementos decorativos flotantes -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-1/4 left-10 w-2 h-2 bg-secondary-400 rounded-full opacity-60 animate-pulse"></div>
    <div class="absolute top-1/3 right-20 w-3 h-3 bg-secondary-300 rounded-full opacity-40 animate-bounce"></div>
    <div class="absolute bottom-1/4 left-1/4 w-1.5 h-1.5 bg-secondary-500 rounded-full opacity-50 animate-pulse"></div>
    <div class="absolute bottom-1/3 right-1/3 w-2.5 h-2.5 bg-secondary-400 rounded-full opacity-30 animate-bounce"></div>
  </div>

  <!-- Contenido principal -->
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <div class="space-y-8 animate-fade-in">
      <!-- Badge de ubicación -->
      <div class="inline-flex items-center px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full text-white/90 text-sm font-medium border border-white/20">
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
        </svg>
        San Bernardo, Región Metropolitana
      </div>

      <!-- Título principal -->
      <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-white leading-tight font-heading">
        <span class="block">{title}</span>
        <span class="block text-secondary-300 text-3xl sm:text-4xl md:text-5xl lg:text-6xl mt-2">
          desde 2008
        </span>
      </h1>

      <!-- Subtítulo -->
      <p class="text-xl sm:text-2xl md:text-3xl text-white/90 max-w-4xl mx-auto leading-relaxed">
        {description}
      </p>

      <!-- Puntos clave de valor -->
      <div class="flex flex-wrap justify-center gap-4 md:gap-8 text-white/80 text-sm md:text-base">
        <div class="flex items-center">
          <svg class="w-5 h-5 mr-2 text-secondary-300" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          +15 años experiencia
        </div>
        <div class="flex items-center">
          <svg class="w-5 h-5 mr-2 text-secondary-300" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          Garantía de calidad
        </div>
        <div class="flex items-center">
          <svg class="w-5 h-5 mr-2 text-secondary-300" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          Entrega oportuna
        </div>
      </div>

      <!-- CTAs -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center pt-4">
        <a
          href={ctaLink}
          class="group inline-flex items-center px-8 py-4 bg-secondary-500 text-primary-900 text-lg font-semibold rounded-xl hover:bg-secondary-400 transition-all duration-300 transform hover:-translate-y-1 hover:shadow-2xl shadow-lg min-w-[200px] justify-center"
        >
          {ctaText}
          <svg class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
        
        <a
          href={secondaryCtaLink}
          class="group inline-flex items-center px-8 py-4 bg-white/10 backdrop-blur-sm text-white text-lg font-semibold rounded-xl border-2 border-white/30 hover:bg-white/20 hover:border-white/50 transition-all duration-300 transform hover:-translate-y-1 hover:shadow-xl shadow-lg min-w-[200px] justify-center"
        >
          {secondaryCtaText}
          <svg class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
        </a>
      </div>

      <!-- Contacto rápido -->
      <div class="pt-8 border-t border-white/20">
        <p class="text-white/70 text-sm mb-2">¿Necesitas ayuda inmediata?</p>
        <a 
          href="tel:+56912345678" 
          class="inline-flex items-center text-secondary-300 hover:text-secondary-200 font-semibold text-lg transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
          </svg>
          +56 9 1234 5678
        </a>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>