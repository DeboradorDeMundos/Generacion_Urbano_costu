<script>
  // Enhanced UX Journey Implementation
  class UserJourneyHero {
    constructor() {
      this.init();
      this.setupInteractiveElements();
      this.setupScrollEffects();
      this.setupParticleSystem();
    }

    init() {
      // Intersection Observer for progressive reveal
      this.observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('animate-fade-in-up');
          }
        });
      }, {
        threshold: 0.1,
        rootMargin: '50px'
      });

      // Observe all animation elements
      const elements = document.querySelectorAll('[class*="animation-delay-"]');
      elements.forEach(el => this.observer.observe(el));
    }

    setupInteractiveElements() {
      // Service cards hover effects
      const serviceCards = document.querySelectorAll('.group.relative');
      serviceCards.forEach(card => {
        card.addEventListener('mouseenter', () => {
          this.addParticleEffect(card);
        });
      });

      // Trust indicators interaction
      const trustBadges = document.querySelectorAll('.bg-white\\/5');
      trustBadges.forEach(badge => {
        badge.addEventListener('click', () => {
          this.showTrustDetail(badge);
        });
      });

      // Enhanced CTA tracking
      const ctaButtons = document.querySelectorAll('a[href*="contacto"], a[href*="productos"]');
      ctaButtons.forEach(button => {
        button.addEventListener('click', (e) => {
          this.trackUserAction(e.target);
        });
      });
    }

    setupScrollEffects() {
      let ticking = false;
      const updateScrollEffects = () => {
        const scrollY = window.scrollY;
        const particles = document.querySelectorAll('.particle, .micro-particle');
        
        particles.forEach((particle, index) => {
          const speed = parseFloat(particle.dataset.speed) || 1;
          const yPos = -(scrollY * speed * 0.5);
          const rotation = scrollY * 0.02 * (index % 2 === 0 ? 1 : -1);
          
          particle.style.transform = `translateY(${yPos}px) rotate(${rotation}deg)`;
        });

        ticking = false;
      };

      window.addEventListener('scroll', () => {
        if (!ticking) {
          requestAnimationFrame(updateScrollEffects);
          ticking = true;
        }
      });
    }

    setupParticleSystem() {
      // Dynamic particle generation based on user interaction
      const hero = document.querySelector('.user-journey-hero');
      
      hero.addEventListener('mousemove', (e) => {
        if (Math.random() > 0.98) { // 2% chance per mousemove
          this.createInteractiveParticle(e.clientX, e.clientY);
        }
      });
    }

    addParticleEffect(element) {
      const rect = element.getBoundingClientRect();
      const centerX = rect.left + rect.width / 2;
      const centerY = rect.top + rect.height / 2;
      
      for (let i = 0; i < 3; i++) {
        setTimeout(() => {
          this.createInteractiveParticle(centerX, centerY);
        }, i * 100);
      }
    }

    createInteractiveParticle(x, y) {
      const particle = document.createElement('div');
      particle.className = 'absolute pointer-events-none z-50';
      particle.style.cssText = `
        left: ${x}px;
        top: ${y}px;
        width: 4px;
        height: 4px;
        background: radial-gradient(circle, rgba(59, 130, 246, 0.8) 0%, transparent 70%);
        border-radius: 50%;
        animation: micro-float 2s ease-out forwards;
      `;

      document.body.appendChild(particle);

      // Remove after animation
      setTimeout(() => {
        particle.remove();
      }, 2000);
    }

    showTrustDetail(badge) {
      // Add micro-interaction feedback
      badge.style.transform = 'scale(1.1)';
      badge.style.transition = 'transform 0.2s ease';
      
      setTimeout(() => {
        badge.style.transform = 'scale(1)';
      }, 200);

      // Could integrate with analytics or modal system
      console.log('Trust indicator activated:', badge.textContent);
    }

    trackUserAction(element) {
      // Enhanced user journey tracking
      const action = element.textContent;
      const timestamp = new Date().toISOString();
      const section = 'hero';
      
      // Could integrate with analytics platform
      console.log('User journey event:', {
        action,
        section,
        timestamp,
        element: element.href
      });

      // Visual feedback
      element.style.transform = 'scale(0.95)';
      setTimeout(() => {
        element.style.transform = 'scale(1)';
      }, 150);
    }
  }

  // Initialize when DOM is ready
  document.addEventListener('DOMContentLoaded', () => {
    new UserJourneyHero();
    
    // Initialize existing counter functionality
    const counters = document.querySelectorAll('.counter');
    counters.forEach(counter => {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting && !counter.classList.contains('counted')) {
            counter.classList.add('counted');
            animateCounter(counter);
          }
        });
      }, { threshold: 0.5 });
      
      observer.observe(counter);
    });
  });

  function animateCounter(element) {
    const target = parseInt(element.getAttribute('data-target'));
    const duration = 2000;
    const start = performance.now();
    
    function update(now) {
      const elapsed = now - start;
      const progress = Math.min(elapsed / duration, 1);
      const current = Math.floor(target * progress);
      
      element.textContent = current.toLocaleString();
      
      if (progress < 1) {
        requestAnimationFrame(update);
      }
    }
    
    requestAnimationFrame(update);
  }

  // Performance monitoring
  if ('performance' in window) {
    window.addEventListener('load', () => {
      const perfData = performance.getEntriesByType('navigation')[0];
      if (perfData.loadEventEnd - perfData.loadEventStart > 3000) {
        console.warn('Hero section load time exceeds 3s:', perfData.loadEventEnd - perfData.loadEventStart);
      }
    });
  }
